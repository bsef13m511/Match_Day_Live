<!DOCTYPE html>
<html lang="en">
<head>
  <title>Match Day Live</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

    <nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      @*<a class="navbar-brand" href="#">@Session["User"]</a>*@
         @Html.ActionLink((string)Session["User"] , "Index", "Admin", null, new { @class= "navbar-brand"} )
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav">
        <li>
          @Html.ActionLink("Home" , "Index", "Admin", null, new { @class= "active"} )
        </li>
         
        <li>@Html.ActionLink("Search Team Via City", "searchTeam", "Admin")</li>
        @*<li>@Html.ActionLink("Search Player Via City", "seacrPlayer", "Admin")</li>*@
        @*<li>@Html.ActionLink("Player Management", "PlayerManagement", "Admin")</li>*@
        <li>@Html.ActionLink("Team Management", "TeamManagement", "Admin")</li>

      </ul>
      <ul class="nav navbar-nav navbar-right">
        @*<li><a href="#"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>*@
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#"><span class="glyphicon glyphicon-lock"></span> Account Settings </a>
          <ul class="dropdown-menu">
            @*<li> <a href=""> <span class="glyphicon glyphicon-picture"></span> Change Picture</a></li>*@
            <li> @Html.ActionLink(" Change Picture", "ChangePicture", "Admin", null, new { @class = "glyphicon glyphicon-picture"})</li>
            @*<li><a href="#"> <span class="glyphicon glyphicon-user"></span> Edit Settings</a></li>*@
            <li>@Html.ActionLink(" Edit Details", "EditDetails", "Admin", null, new { @class = "glyphicon glyphicon-user"})</li>
          </ul>
        </li>
          <li>  @Html.ActionLink(" Logout" , "Logout", "Admin", null, new { @class= "glyphicon glyphicon-log-out"} ) <li>
      </ul>
    </div>
  </div>
</nav>
      <style>
p.error {
    color: red;
    font-weight: bold;
}
</style>
</head>
<body>
    @RenderBody()

   
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)


</body>
</html>

