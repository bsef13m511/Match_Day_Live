@model List<MatchDayLive.Models.Team>
@{
    ViewBag.Title = "TeamManagement";
    Layout = "~/Views/Shared/adminLayout.cshtml"; 
}

<h2>TeamManagement</h2>

<br/>
<p>
  
    @Html.ActionLink("Create New Team", "CreateTeam")
</p>
<div class="container-fluid"> 
<table id="myTable" border="1" >
    <tr>
        <th>
            Team Picture
        </th>
        <th>
           Team Name
        </th>
        <th>
            Password
        </th>
          <th>
            Email Id
        </th>
        <th>
            City
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>   
           <img src="~/TeamsPictures/@item.TeamPicture" alt="Team pic" width="130" height="90"/>
        </td>
        <td>
           @item.TeamName
        </td>
        <td>
            @item.Password
        </td>
        <td>
           @item.Password
        </td>
         <td>
           @item.City
        </td>
        <td>
            @Html.ActionLink("Edit", "EditTeam", new { teamName=item.TeamName}) |
            @Html.ActionLink("Details", "TeamDetails", new { teamName=item.TeamName }) |
            @Html.ActionLink("Delete", "DeleteTeam", new { teamName=item.TeamName })
        </td>
    </tr>
}

</table>
    </div>