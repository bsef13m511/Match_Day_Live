@model MatchDayLive.Models.Team

@{
    ViewBag.Title = "login";
    Layout = "~/Views/Shared/_layout1.cshtml";   
}

<div class="container">
@using (Html.BeginForm("ChangePassword", "Home", new { @class = "form-horizontal" }))
{
  <fieldset>
    <legend>Change Password</legend>
     
      @*@Html.HiddenFor(@TempData["data"])*@
      <input type="hidden" name="oldPassword" value="@TempData["PWD"]" />
      <input type="hidden" name="teamName" value="@TempData["UN"]" />
     
    <div class="form-group" >
        <div class="col-sm-6">
            <div class="form-control">
                <span><i class="fa fa-lock"></i></span>  
    	        @Html.TextBoxFor(model => model.Password, new { placeholder = "Enter New password", type="Password" } )      
            </div>
            <p class="error">
              @Html.ValidationMessageFor(model => model.Password)
                </p>
        </div>
    </div>
 
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Submit</button>
      </div>

   
  </fieldset>
  
}
</div>