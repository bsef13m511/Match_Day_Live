@model List<MatchDayLive.Models.Picture>
@{
    ViewBag.Title = "addPhotos";
    Layout = "~/Views/Shared/teamLayout.cshtml"; 
}

<style type="text/css">
body {
	background: #222;
	color: #eee;
	margin-top: 20px;
	font-family: Arial, "Helvetica Neue", Helvetica, sans-serif;
}
a {
	color: #FFF;
}
a:hover {
	color: yellow;
	text-decoration: underline;
}
.thumbnails img {
	height: 200px;
	border: 4px solid #555;
	padding: 1px;
	margin: 0 10px 10px 0;
}

.thumbnails img:hover {
	border: 4px solid #00ccff;
	cursor:pointer;
}

.preview img {
	border: 4px solid #444;
	padding: 1px;
	width: 800px;
}
</style>

<body>

<div class="gallery" >
	
	<br />

	<div class="thumbnails">
       
		@foreach (var m in Model)
         {
             <img onmouseover="preview.src=img1.src"  src="~/TeamGallery/@m.PhotoTitle" alt="" />
        }
       
	</div><br/>


</div>


</body>